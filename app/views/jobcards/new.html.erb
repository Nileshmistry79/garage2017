<h1 align='center'>New Job Card</h1>
<% if @jobcard.errors.any? %>
	<ul> 
		<% @jobcard.errors.full_messages.each do |msg| %>
     		<li> <%= msg %> </li>
		<% end %>
	</ul>
<% end %>


<div class='row'>
	<div class='col-xs-12'>
<%= form_for(@jobcard, :html => {class: "form-horizontal", role: "form"})  do |f| %>

	<div class="form-group">
	<div class="control-label col-sm-2">

<%= f.label :vehicle_id , "Vehicle Number" %>
</div>
<div class="col-sm-10">

<%= f.select(:vehicle_id, @all_vehicle.collect {|u| [u.vehicle_no, u.id]}, :prompt => '--Select--', :class => "form-control"  ) %>

</div>
</div>


		<%= render partial: 'lookup' %>




	<div class="form-group">
		<div class="control-label col-sm-2">
        <%= f.label :init_problems, "Details Problem" %>
  </div>
	 <div class="col-sm-8">
    <%= f.text_area :init_problems, class: "form-control", placeholder: "Detailed Problem", autofocus: true %>
</div>
</div>
	<div class="form-group">
	<div class="control-label col-sm-2">

<%= f.label :estimated_cost,  "Estimated Price" %>
</div>
<div class="col-sm-2">
<%= f.number_field :estimated_cost, class: "form-control", placeholder: "0", autofocus: true%>
</div>
</div>


	<div class="form-group">
	<div class="control-label col-sm-2">

<%= f.label :date_arrival,  "Date of Estimation" %>
</div>
<div class="col-sm-2">
<%= f.date_field :date_arrival, class: "form-control", autofocus: true%>
</div>
</div>




		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>    
  </div>


<% end %>
</div>
</div>
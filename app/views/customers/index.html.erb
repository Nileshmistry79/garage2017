<h1 align="center">Listing all customers</h1>
	<% @customers.each do |customer| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
		<div class="well well-lg">
			<div class="customer-title">
				<div class="col-md-3">Customer Name</div> <%= link_to customer.cust_Name, customer_path(customer) %>
			</div>
			<div class="customer-body">
				<div class="col-md-3">Customer Address</div> 	<%= truncate(customer.cust_Add, length: 100) %>
			</div>
			<div class="customer-body">
				<div class="col-md-3">Mobile Number</div> 	<%= customer.cust_mobile %>
			</div>
			
			<div class="customer-body">
				<div class="col-md-3">Email id:</div> 	<%= customer.cust_email %>
			</div>		
			
			<div class="customer-body">
				<div class="col-md-3">Total Number of Vehicles:</div> 	<%= Vehicle.count(:condition => "Vehicle.find(customer)") %>
			</div>		
			
				
<div class="customer-actions">
<%= link_to "Edit this customer", edit_customer_path(customer), class: "btn btn-xs btn-primary" %>

<% link_to "Delete this customer", customer_path(customer), method: :delete,
data: { confirm: "Are you sure you want to delete the customer?"},
class: "btn btn-xs btn-danger" %>


</div>

</div>

</div>

</div>

<% end %>